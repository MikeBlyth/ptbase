%fieldset{:onclick => "Element.toggle('contact_table', 'contact_hide_msg','contact_show_msg')"}
  %legend
    Contacts/Notes/Commments (click to
    %span#contact_hide_msg hide
    = succeed ")" do
      %span#contact_show_msg{:style => "display: none"} show
  #contact_table
    %table{:cellpadding => "3"}
      - for acontact in contact_list.contacts
        - if acontact.show > 0
          %tr{:valign => "top"}
            %td= acontact.date.strftime('%d-%b-%y')
            %td= acontact.provider
            %td= acontact.category
            <td #{"class='attention'" if acontact.category == 'Attention'} >#{acontact.comment}
